<link rel="stylesheet" href="/admin-styles/registrar-estudiante.css" />
<!-- Encabezado y navegacion por defecto, a excepcion de la pantalla de inicio de sesion -->
{{> header-admin}} <!-- Importacion para encabezado del administrador -->

<!-- Contenedor y entrada de datos para registrar estudiantes, inputs y dropbox -->
    <form id="inputs-container" action="../user/singUp" method="post">
      <span id="label-title">Registrar usuarios</span>
      <div class="inputs-childs">
        <label for="">Nombres</label>
        <input type="text" name="nombre" />
      </div>
      <div class="inputs-childs">
        <label for="">Primer apellido</label>
        <input type="text" name="primer_apellido" />
      </div>
      <div class="inputs-childs">
        <label for="">Segundo apellido</label>
        <input type="text" name="segundo_apellido" />
      </div>
      <div class="inputs-childs">
        <label for="">Tipo de identificación</label>
        <select name="tipo_doc_id">
          <option disabled selected>Seleccione</option>
          <option value="1">C.C</option>
          <option value="2">T.I</option>
        </select>
      </div>
      <div class="inputs-childs">
        <label for="">Número de identificación</label>
        <input type="text" name="dni" />
      </div>
      <div class="inputs-childs">
        <label for="">Sede</label>
        <select name="sede_id" id="sede">
        </select>
      </div>
      <div class="inputs-childs">
        <label for="">Tipo de usuario</label>
        <select name="rol_id" id="rol">
        </select>
      </div>
      <div class="inputs-childs">
        <label for="">Curso</label>
        <select name="curso_id" id="curso">
        </select>
      </div>
      <div class="inputs-childs">
        <label for="">Jornada</label>
          <select name="jornada_id" id="jornada">
          </select>
      </div>
      <div class="inputs-childs">
        <label for="">Correo electrónico</label>
        <input id="correo-validate" type="email" name="email" />
      </div>
      <div class="inputs-childs">
        <label for="">Contraseña</label>
        <input type="text" name="contraseña" />
      </div>
      <button id="btn-accept">Aceptar</button>
    </form>
    <script src="/js/getSedes.js"></script>
    <script src="/js/getJornadas.js"></script>
    <script src="/js/getRoles.js"></script>
    <script src="/js/getCursos.js"></script>