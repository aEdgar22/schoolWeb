<link rel="stylesheet" href="../styles/informacion-personal.css" />
<!-- Encabezado y navegacion por defecto, a excepcion de la pantalla de inicio de sesion -->
<header class="header">
  <nav class="nav">
    <p class="logo">Gestión Académica</p>
    <button class="btn-menu">
      <img id="img-menu" src="../assets/menu.svg" />
    </button>
    <div class="submenu-container">
      <div class="drop-btn">
        <span class="submenu">Institucional</span>
        <div id="drop-content">
          <!-- Menu desplegable -->
          <a href="#">Información académica</a>
          <a href="#">Observador</a>
        </div>
      </div>
      <span class="submenu">Resultado de notas</span>
      <div class="drop-btn">
        <span class="submenu">Usuario</span>
        <div id="drop-content">
          <a href="#">Perfil</a>
          <a href="#">Cerrar sesión</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Contenedor y entrada de datos para actualizar información, inputs y dropbox -->
<form id="inputs-container">
  <span id="label-title">Actualizar información personal</span>
  <div class="inputs-childs">
    <label for="">Nombres</label>
    <input type="text" name="nombres" />
  </div>
  <div class="inputs-childs">
    <label for="">Primer apellido</label>
    <input type="text" name="primer-apellido" />
  </div>
  <div class="inputs-childs">
    <label for="">Segundo apellido</label>
    <input type="text" name="segundo-apellido" />
  </div>
  <div class="inputs-childs">
    <label for="">Tipo de identificación</label>
    <select name="tipo-identificacion">
      <option disabled selected>Seleccione</option>
      <option value="cc">C.C</option>
      <option value="ti">T.I</option>
    </select>
  </div>
  <div class="inputs-childs">
    <label for="">Número de identificación</label>
    <input type="text" name="numero-identificacion" />
  </div>
  <div class="inputs-childs">
    <label for="">Sexo</label>
    <select name="sexo">
      <option disabled selected>Seleccione</option>
      <option value="masculino">Masculino</option>
      <option value="femenino">Femenino</option>
    </select>
  </div>
  <div class="inputs-childs">
    <label for="">Correo electrónico</label>
    <input id="correo-validate" type="email" name="correo" />
  </div>
  <div class="inputs-childs">
    <label for="">Celular</label>
    <input type="tel" name="celular" maxlength="10" />
  </div>
  <div class="inputs-childs">
    <label for="">Fecha de nacimiento</label>
    <input type="date" name="fecha-nacimiento" />
  </div>
  <div class="inputs-childs">
    <label for="">Lugar de nacimiento</label>
    <input type="text" name="lugar-nacimiento" />
  </div>
  <div class="inputs-childs">
    <label for="">Dirección</label>
    <input type="text" name="direccion" />
  </div>
  <button id="btn-accept">Aceptar</button>
</form>